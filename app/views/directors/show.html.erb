<h1>
  <%= @director.title %> <br>
  <small>
    submitted <%= time_ago_in_words(@director.created_at) %> ago by <%= @director.user.name %>
  </small>
</h1>
 
<div class="row">
  <div class="col-md-8">
    <p><%= @director.body %></p>
  </div>

  <div>
    <% if user_is_authorized_for_director?(@director) %>
      <%= link_to "Edit", edit_director_path(@director), class: 'btn btn-success' %>
      <%= link_to "Delete", @director, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this notice?'} %> 
    <% end %>
  </div>

</div>
    